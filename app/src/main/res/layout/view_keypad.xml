<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix,UnusedAttribute"
     >
    <TableLayout
        tools:ignore="MissingPrefix"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <Button
                android:fontFamily="@font/byekan"
                
                style="?android:button"
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="7"
                android:textSize="@dimen/font_keypad_num" />

            <Button
                android:fontFamily="@font/byekan"
                
                style="?android:button"
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="8"
                android:textSize="@dimen/font_keypad_num" />

            <Button
                android:fontFamily="@font/byekan"
                
                style="?android:button"
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="9"
                android:textSize="@dimen/font_keypad_num" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <Button
                android:fontFamily="@font/byekan"
                
                style="?android:button"
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="4"
                android:textSize="@dimen/font_keypad_num" />

            <Button
                android:fontFamily="@font/byekan"
                
                style="?android:button"
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="5"
                android:textSize="@dimen/font_keypad_num" />

            <Button
                android:fontFamily="@font/byekan"
                 
                style="?android:button"
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="6"
                android:textSize="@dimen/font_keypad_num" />
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:fontFamily="@font/byekan"
         
                style="?android:button"
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="1"
                android:textSize="@dimen/font_keypad_num" />

            <Button
                android:fontFamily="@font/byekan"
                
                style="?android:button"
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="2"
                android:textSize="@dimen/font_keypad_num" />

            <Button
                android:fontFamily="@font/byekan"
  
                style="?android:button"
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="3"
                android:textSize="@dimen/font_keypad_num" />
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1" >
            <ImageButton
                android:scaleType="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_clear"
                android:padding="@dimen/keypad_padding"
                android:tag="clear"  />

            <Button
                android:fontFamily="@font/byekan"
         
                style="?android:button"
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                android:tag="num"
                android:text="0"
                android:textSize="@dimen/font_keypad_num"
                 />

            <ImageButton
                android:scaleType="center"
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keypad_margin"
                android:layout_weight="1"
                android:padding="@dimen/keypad_padding"
                app:srcCompat="@drawable/ic_keypad_switch"
                android:tag="result"  />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
