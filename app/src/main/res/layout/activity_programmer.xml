<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="jelly_bean"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shoniz.saledistributemobility.programmer.ProgrammerActivity">


    <Button
        android:id="@+id/btnDeleteAllDatabases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Delete All Databases"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btnDeleteSharedPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Delete Sharedpref"
        app:layout_constraintEnd_toEndOf="@+id/btnDeleteAllDatabases"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteAllDatabases" />

    <Button
        tools:ignore="RtlCompat"
        android:id="@+id/btnDeleteDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:text="Delete Database"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        tools:ignore="RtlCompat"
        android:id="@+id/spnDetabases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/btnDeleteDatabase"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteDatabase" />
</android.support.constraint.ConstraintLayout>
